<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@drawable/p1">
        <TextView
        android:id="@+id/tv_illuminations_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
		<com.spring.progressview.SpringProgressView
        android:id="@+id/illuminations_progress_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView
        android:id="@+id/tv_temp_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
		<com.spring.progressview.SpringProgressView
        android:id="@+id/temperature_progress_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
		<TextView
        android:id="@+id/tv_hum_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
		<com.spring.progressview.SpringProgressView
        android:id="@+id/humidty_progress_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >

		    <ImageView
		        android:id="@+id/animotion_ImageView_fan"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:src="@drawable/animation" />

		    <ImageView
		        android:id="@+id/animotion_ImageView_led"
		        android:layout_width="0dp"
		        android:layout_height="74dp"
		        android:layout_weight="1"
		        android:src="@drawable/animation_2" />

		    <ImageView
		        android:id="@+id/animotion_ImageView_buzz"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:src="@drawable/animation_1" />
		</LinearLayout>

		<LinearLayout 
		android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="horizontal">
		<Button
        android:id="@+id/btn_temperature_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="当前环境信息" />

        <Button
        android:id="@+id/btn_humidty_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="手动获取" />   
		    
		</LinearLayout>

		<LinearLayout 
		android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="horizontal">

        <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="打开风扇"
        android:textOn="关闭风扇"
        android:layout_weight="1"/>

        <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="打开灯光"
        android:textOn="关闭灯光"
        android:layout_weight="1" />
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
		android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="返回" />
    </LinearLayout>

</LinearLayout>
